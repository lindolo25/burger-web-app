<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-6 col-md-4">
            <ul class="burger-list">
                {{#each burgers}}
                <li>{{burger_name}}</li>
                {{/each}}
            </ul>
        </div>
        <div class="col-12 col-sm-6 col-md-4">
            <ul class="burger-list devoured">
                {{#each devoured}}
                <li>{{burger_name}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<form name="burger-form" action="." method="POST" class="text-center mt-3">
    <input type="text" name="burger-name" id="burger-name" placeholder="Type in a burger">
    <button type="submit" id="burger-add">Add</button>
</form>